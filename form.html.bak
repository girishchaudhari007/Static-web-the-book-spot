<!DOCTYPE html>
<html lang="en">
<head>
  <style>
    button a{
      text-decoration: none;
    }
  </style>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
   <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
   </head>
<body>
    <div class="row" style="
    margin-left: 375px;">
        <div class="col-md-8 mb-4">
          <div class="card mb-4">
            <div class="card-header py-3">
              <h5 class="mb-0">Add Your Details</h5>
            </div>
            <div class="card-body">
              <form>
                <!-- 2 column grid layout with text inputs for the first and last names -->
                <div class="row mb-4">
                  <div class="col">
                    <div class="form-outline">
                      <input type="text" id="form7Example1" class="form-control" />
                      <label class="form-label" for="form7Example1">First name</label>
                    </div>
                  </div>
                  <div class="col">
                    <div class="form-outline">
                      <input type="text" id="form7Example2" class="form-control" />
                      <label class="form-label" for="form7Example2">Last name</label>
                    </div>
                  </div>
                </div>
      
                <!-- Text input -->
                <div class="form-outline mb-4">
                  <input type="text" id="form7Example3" class="form-control" />
                  <label class="form-label" for="form7Example3">Company name</label>
                </div>
      
                <!-- Text input -->
                <div class="form-outline mb-4">
                  <input type="text" id="form7Example4" class="form-control" />
                  <label class="form-label" for="form7Example4">Address</label>
                </div>
      
                <!-- Email input -->
                <div class="form-outline mb-4">
                  <input type="email" id="form7Example5" class="form-control" />
                  <label class="form-label" for="form7Example5">Email</label>
                </div>
      
                <!-- Number input -->
                <div class="form-outline mb-4">
                  <input type="number" id="form7Example6" class="form-control" />
                  <label class="form-label" for="form7Example6">Phone</label>
                </div>
                <div class="form-outline mb-4">
                    <input type="number" id="form7Example6" class="form-control" />
                    <label class="form-label" for="form7Example6">House No.</label>
                  </div>
      
                <!-- Message input -->
                <div class="form-outline mb-4">
                  <textarea class="form-control" id="form7Example7" rows="4"></textarea>
                  <label class="form-label" for="form7Example7">Additional information</label>
                </div>
                <div class="row mb-4">
                    <div class="col">
                      <div class="form-outline">
                        <input type="text" id="form7Example1" class="form-control" placeholder="State"/>
                        <label class="form-label" for="form7Example1"></label>
                      </div>
                    </div>
                    <div class="col">
                      <div class="form-outline">
                        <input type="text" id="form7Example2" class="form-control" placeholder="District"/>
                        <label class="form-label" for="form7Example2"></label>
                      </div>
                      
                    
                  </div> 
                  <div class="col">
                    <div class="form-outline">
                      <input type="text" id="form7Example2" class="form-control" placeholder="City"/>
                      <label class="form-label" for="form7Example2"></label>
                    </div>
               
              </form>
            </div>
          </div>
        </div>
        <button type="button" class="btn btn-primary btn-lg btn-block"><a href="cart.html"> Continue</a></button>

</body>
</html>